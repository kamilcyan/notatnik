	   (OpenDialog1->FileName);
   }       */

   if(OpenDialog1->Execute())
   {
	   TDocument *open;
	   open = new TDocument(PageControl1);

	   open->LoadFromFile(OpenDialog1->FileName);

   }

}
//---------------------------------------------------------------------------


TDocument::TDocument(TPageControl *APageControl): TTabSheet(APageControl)
{
 PageControl = APageControl;
 Caption = "Nowy dokument";
 RichEdit = new TRichEdit(this);
 RichEdit->Parent = this;
 RichEdit->Align = alClient;
 RichEdit->WordWrap = false;
 RichEdit->ScrollBars = ssBoth;
}
 void TDocument::DodajZakladke(TPageControl *APageControl)
 {
 TDocument *doc;
 doc = new TDocument(APageControl);
 doc->PageControl = APageControl;
 Caption = "Nowy dokument";

 TRichEdit *RichEdit;
 RichEdit = new TRichEdit(this);
 RichEdit->Parent = this;
 RichEdit->Align = alClient;
 RichEdit->WordWrap = false;
 RichEdit->ScrollBars = ssBoth;
 }


 void TDocument::LoadFromFile(String AFileName)
{
 String FileName = AFileName;
 RichEdit->Lines->LoadFromFile(FileName);
 Caption = ExtractFileName(FileName);
}


//---------------------------------------------------------------------------


void __fastcall TForm1::Action2Execute(TObject *Sender)
{
	TDocument *open;
	open = new TDocument(PageControl1);
	open->DodajZakladke(PageControl1);
}
//---------------------------------------------------------------------------

