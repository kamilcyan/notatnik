void TForm1::DodajZakladke(TPageControl *APageControl)
{
 /* Tworzenie nowego obiektu klasy TTabSheet. Jako argument konstruktora
nale¿y podaæ komponent klasy TpageControl, do którego dodajemy zak³adkê.*/
 TTabSheet *Zakladka;
 Zakladka = new TTabSheet(APageControl);
 /* Dla nowo utworzonej zak³adki musimy jeszcze ustawiæ w³aœciwoœæ
PageControl, czyli wskazanie na w³aœciciela */
 Zakladka->PageControl = APageControl;
 /* Na koniec ustawiamy tekst, który wyœwietli siê jako nazwa zak³adki*/
 Zakladka->Caption="Nowy dokument";
}
